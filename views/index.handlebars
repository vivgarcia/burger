
<div class="container">
    <section class="hero is-warning is-medium">
    <div class="hero-body">
        <div class="container has-text-centered">
            <div class="is-flex is-horizontal-center">

            <figure class="image is-128x128">
                <img src="/assets/img/burger.png" alt="Image Not Available">
            </figure>

            </div>

            <h1 class="title is-1">
                Eat Da Burger!
            </h1>
            
            <div class="field has-addons has-addons-centered">
                <div class="control">
                    <input class="input" type="text" placeholder="Enter a hamburger" id="newburger">
                </div>
            <div class="control">
                <button class="button is-danger create-form">
                    <span class="icon is-small" id="">
                        <i class="fas fa-check" aria-hidden="true"></i>
                    </span>
                </button>
            </div>
        </div>
            
        </div>
    </div>
    </section>
</div>
{{!-- two columns for burgers waiting to eaten and devoured burgers --}}
<div class="container">
<div class="columns">
    <div class="column">
        <article class="panel is-danger">
    <p class="panel-heading">
        Burgers
    </p>
    <p class="panel-tabs">
    

    <ul>
    {{#each burgers}}
        {{#unless devoured}}
            <pre>{{this.id}}. {{this.burger_name}} </pre>
            {{> burgers/burger-block devoured=true}}
        {{/unless}}
    {{/each}}

    </ul>
    </p>

</article>
</div>

<div class="column">

    <div class="columns">
    <div class="column">
        <article class="panel is-danger">
    <p class="panel-heading">
        Devoured
    </p>
    <p class="panel-tabs">
    <ul>    
    {{#each burger_data}}
        {{#if devoured}}
            <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
            {{> burgers/burger-block devoured=false}}
        {{/if}}
    {{/each}}

    </ul>
    </p>

</article>
</div>
</div>

</div>